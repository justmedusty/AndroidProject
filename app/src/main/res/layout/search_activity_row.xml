<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:id="@+id/searchActivityRowTitle"/>

    <ImageButton
        android:id="@+id/searchActivityRowButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/honeyDew"
        android:contentDescription="@string/favourite_button_description"
        android:src="@drawable/favourites"
        android:translationX="335dp"
        tools:ignore="ImageContrastCheck" />

</FrameLayout>