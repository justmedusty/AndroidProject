<?xml version="1.0" encoding="utf-8"?>
<!-- This layout is inflated by the recycler view for each recipe object displayed in all main pages (Search, Favourites, and Popular) -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recipe_row_layout"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:padding="9dp"
        android:textColor="@color/honeyDew"
        android:textSize="14sp"
        android:background="@color/cardview_dark_background"
        android:id="@+id/searchActivityRowTitle"/>

    <ImageButton
        android:id="@+id/searchActivityRowButton"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:backgroundTint="@color/honeyDew"
        android:contentDescription="@string/favourite_button_description"
        android:src="@drawable/favourite"
        android:translationY="-5dp"
        tools:ignore="ImageContrastCheck" />
</LinearLayout>