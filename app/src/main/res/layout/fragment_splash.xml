<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/splash_fragment"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/toolBarGrey"
    tools:context=".SplashFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:src="@drawable/splash_img1"
        android:adjustViewBounds="true"
        android:contentDescription="@string/splash_image" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/splash_title"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:background="@color/imperialRed"
        android:textSize="25dp"
        android:textColor="@color/honeyDew"/>


</RelativeLayout>